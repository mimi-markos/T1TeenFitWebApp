@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header bg-transparent ml-2 my-3">
                <h1 class="text-center">Create<strong> Account</strong></h1>
            </div>
            <div class="card-body">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-floating col-6 py-2">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.FirstName"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating col-6 py-2">
                            <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                            <label asp-for="Input.LastName"></label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-floating py-2">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                   @* <div class="form-floating py-2">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select"></select>
                    </div>*@
                    <div class="col text-center mt-3">
                    <button id="registerSubmit" type="submit" class="btn btn-auth mr-3">Register</button>
                    </div>
                    <div class="mt-5">
                        <p>
                            Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"><strong>Login here!</strong></a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
