@model ApplicationUser  

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">Profile</li>
    </ol>
</nav>

<!-- teen user details -->
<div class="card rounded mt-4 p-3">
    <div class="card-header bg-light">
        <h2 class="my-4">Profile</h2>
    </div>
    <div class="row pl-3">
        <div class="col-8 pt-4">
            <dl class="row mt-4">

                <dt class="col-3 py-2"><strong>First Name:</strong></dt>
                <dd class="col-8 py-2">@Model.FirstName</dd>

                <dt class="col-3 py-2"><strong>Last Name:</strong></dt>
                <dd class="col-8 py-2">@Model.LastName</dd>

                <dt class="col-3"><strong>Email:</strong></dt>
                <dd class="col-8">@Model.Email</dd>
            </dl>
        </div>
        <div class="col-4 pt-4">
            <img src="/images/profile/DefaultProfileImage.png" class="img-fluid">
        </div>
    </div>
    <div>
        <!-- button link to dashboard -->
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary  m-2">
            <i class="bi bi-arrow-left-square"></i> Back to Dashboard
        </a>
    </div>
</div>