@model ActivityLog

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Activity")">Activities</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>




<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header bg-transparent">
                <h1>Create an <strong>Activity Log</strong></h1>
            </div>
            <div class="card-body">
                <form asp-action="Create">

                    <input type="hidden" asp-for="ActivityId" class="form-control"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    
                    <!-- activity log form inputs -->
                    <partial name="_FormInputs"/>
                    
                    <!-- submit and cancel buttons -->
                    <div class="form-group text-end">
                        <a asp-controller="Activity" asp-action="Index" class="btn btn-cancel mr-2" >Cancel</a>
                        <input type="submit" value="Submit" class="btn btn-submit"/>
                    </div>
               </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
