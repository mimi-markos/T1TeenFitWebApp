@model ActivityLog 

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
      <li class="breadcrumb-item"><a href="@Url.Action("Index", "ActivityLog")">My Activity Logs</a></li>
    <li class="breadcrumb-item active" aria-current="page">Details</li>
  </ol>
</nav>

<div class="card rounded p-3">
    <div class="card-header bg-light">
        <h2 class="my-4">Activity Log</h2>
    </div>
    <div class="row p-3">
        <!-- activity log details -->
        <div class="col-8 pt-4">
            <dl class="row mt-4">      
                
                <dt class="col-4 py-2">Activity:</dt>
                <dd class="col-8 py-2">@Model.Activity.Name</dd>
                
                <dt class="col-4 py-2">Activity Date:</dt>
                <dd class="col-8 py-2">@Model.ActivityDate.ToShortDateString()</dd>
                
                <dt class="col-4 py-2">Duration:</dt>
                <dd class="col-8 py-2">@Model.Duration minutes</dd>

                <dt class="col-4 py-2">Glucose Before Activity:</dt>
                <dd class="col-8 py-2">@Model.GlucoseBeforeActivity mmol/L</dd>

                <dt class="col-4 py-2">Glucose After Activity:</dt>
                <dd class="col-8 py-2">@Model.GlucoseAfterActivity mmol/L</dd>

                <dt class="col-4 py-2">Activity Notes:</dt>
                <dd class="col-8 py-2">@Model.ActivityNotes</dd>
            </dl>     
        </div>
        <div class="col-4">
            <img src="@Model.Activity.ImageUrl" class=img-fluid>
        </div>  
        <div>
            <!-- button link to activity logs index -->
            <a asp-controller="ActivityLog" asp-action="Index" class="btn btn-details me-5">
                <i class="bi bi-arrow-left-square"></i> Back to Activity Logs
            </a>

            <!-- button link to edit activity log -->
            <a asp-controller="ActivityLog" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                 <i class="bi bi-pencil-square"></i>
            </a>

            <!-- button link to delete activity log -->
            <a data-bs-toggle="modal" data-bs-target="#deleteModal"class="btn btn-outline-danger">
                 <i class="bi bi-trash mr-2"></i>
            </a>
         </div>
    </div>
<partial name="_DeleteModal"/>
</div>