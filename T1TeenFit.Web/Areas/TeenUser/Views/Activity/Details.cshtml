@model Activity

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Activity")">Activities</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>

<!-- activity details -->
<div class="card rounded mt-4 p-3">
    <div class="card-header bg-light">
        <h2 class="my-4">@Model.Name</h2>
    </div>
    <div class="row pl-3">
        <div class="col-8 pt-4">
            <dl class="row mt-4">

                <dt class="col-3 py-3">About:</dt>
                <dd class="col-8 py-3">@Model.Description</dd>

                <dt class="col-3">Tips:</dt>
                <dd class="col-8">@Model.Tips</dd>
            </dl>
        </div>
        <div class="col-4 pt-4">
            <img src="@Model.ImageUrl" class="img-fluid">
        </div>
    </div>

    <!-- button link to activities index -->
    <div>
        <a asp-controller="Activity" asp-action="Index" class="btn btn-primary  m-2">
            <i class="bi bi-arrow-left-square"></i> Back to Activities
        </a>
    </div>
</div>