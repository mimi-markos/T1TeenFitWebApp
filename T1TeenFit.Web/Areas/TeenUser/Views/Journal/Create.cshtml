@model Journal

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Journal")">My Journals</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header bg-transparent">
                <h1>Create a <strong>Journal Entry</strong></h1>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <!-- add hidden field to store userid -->
                    <input type="hidden" asp-for="ApplicationUserId" class= "form-control"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    

                    <!-- journal entry form inputs -->
                    <partial name="_FormInputs"/>


                    <!-- submit and cancel buttons -->
                    <div class="form-group text-end">
                        <a class="btn btn-cancel mr-2" asp-action="Index">Cancel</a>
                        <input type="submit" value="Submit" class="btn btn-submit"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}    

