@model Journal 

<!-- journal entry form fields -->
<div class="form-group py-2">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control"/>
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="form-group py-2">
    <label asp-for="DateCreated" class="control-label">Date</label>
    <input type="date" asp-for="DateCreated" class="form-control"/>
    <span asp-validation-for="DateCreated" class="text-danger"></span>
</div>

<div class="form-group py-2">
    <label asp-for="JournalMessage" class="control-label">Journal Entry</label>
    <textarea rows="8" placeholder="Add your journal entry here..." asp-for="JournalMessage" class="form-control"></textarea>
    <span asp-validation-for="JournalMessage" class="text-danger"></span>
    <small class="text-muted">Maximum length of 500 characters.</small>
</div>

<div class="form-group py-2">
    <label asp-for="Mood" class="control-label"></label>
    <select asp-for="Mood" class="form-control" asp-items="Html.GetEnumSelectList<Mood>()">
        <option selected>Select Mood</option>
    </select>
    <span asp-validation-for="Mood" class="text-danger"></span>
 </div>   