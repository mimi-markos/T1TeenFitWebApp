@model ApplicationUser

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "UserAccount")">Manage Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete</li>
    </ol>
</nav>


<div class="card p-3">
    <div class="card-header">
        <h2 class="my-4">Delete User Account</h2>
    </div>
    <div class="row p-3">
        <div class="col-8 pt-3">
            <dl class="row">
                <dt class="col-4 py-2">First Name:</dt>
                <dd class="col-8 py-2">@Model.FirstName</dd>

                <dt class="col-4 py-2">Last Name:</dt>
                <dd class="col-8 py-2">@Model.LastName</dd>

                <dt class="col-4 py-2">Email:</dt>
                <dd class="col-8 py-2">@Model.Email</dd>
            </dl>
        </div>
        <div>
            <form asp-controller="UserAccount" asp-action="Delete" typeof="post">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />


                <a class="btn btn-secondary" asp-controller="UserAccount" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>